<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
              http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
		<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
	</application>
  <navigation-rule>
		<from-view-id>/default.xhtml</from-view-id>
		<navigation-case>
		<from-outcome>ShowRestaurants</from-outcome>
		<to-view-id>/ShowRestaurants.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
		<navigation-case>
		<from-outcome>search</from-outcome>
		<to-view-id>/SearchRestaurants.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/ShowRestaurants.xhtml</from-view-id>
		<navigation-case>
		<from-outcome>giveRating</from-outcome>
		<to-view-id>/GiveRating.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
		<navigation-case>
		<from-outcome>ShowRestaurants</from-outcome>
		<to-view-id>/ShowRestaurants.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
		<navigation-case>
		<from-outcome>viewRatings</from-outcome>
		<to-view-id>/Ratings.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/SearchRestaurants.xhtml</from-view-id>
		<navigation-case>
		<from-outcome>success</from-outcome>
		<to-view-id>/RestaurantList.xhtml</to-view-id>
		<redirect/>
		</navigation-case>
		</navigation-rule>
</faces-config>
